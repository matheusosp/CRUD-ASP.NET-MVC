@model RPS.Web.Models.ViewModels.PtItemCommentsVm


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ItemId)

<div class="form-row align-items-center">

    @Rps.UserAvatar(Model.CurrentUser, "mr-3 li-avatar rounded")

    <div class="col-sm-6">
        @Html.EditorFor(model => model.NewCommentText, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter new comment..." } })
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</div>
}

<hr />


<ul id="listComments" class="list-unstyled">

    @foreach (var comment in Model.Comments)
    {
    <li class="media chitchat-item">
        @Rps.UserAvatar(comment.User, "mr-3 li-avatar rounded")
        <div class="media-body">
            <h6 class="mt-0 mb-1"><span>@comment.User.FullName</span><span class="li-date">@comment.DateCreated.ToString("MMM d, yyyy")</span></h6>

            <span type="text" class="chitchat-text ">@comment.Title</span>
        </div>
    </li>
    }

</ul>